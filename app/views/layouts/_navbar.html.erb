<header class="navbar">
  <%= link_to 'Rupert', root_path, class: 'navbar__brand' %>
  <% if user_signed_in? %>
    <div class="navbar__name">
      <%= current_user.email %>
    </div>
    <%= button_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn--dark' %>
  <% else %>
    <div class="navbar__right">
      <%= render 'layouts/sign_in_form' %>
    </div>
  <% end %>
</header>
