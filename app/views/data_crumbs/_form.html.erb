<%= simple_form_for data_crumb, html: { class: "quote form" } do |f| %>
  <% if data_crumb.errors.any? %>
    <div class="error-message">
      <%= data_crumb.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :content, input_html: { autofocus: true } %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>
